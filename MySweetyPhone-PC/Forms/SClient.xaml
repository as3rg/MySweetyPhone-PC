<Page x:Class="MySweetyPhone_PC.Forms.SClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MySweetyPhone_PC.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SClient">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Button Name="SearchBtn" Content="Поиск..." Click="StartSearching" Padding="10" BorderThickness="0" Margin="10" d:LayoutOverrides="Height" Background="#FFB6B6B6" Style="{DynamicResource SquareButton}" HorizontalAlignment="Center" Width="auto"/>
        </Grid>
        <Grid Grid.Row="1">
            <ListView Name="Devices"></ListView>
        </Grid>
    </Grid>
</Page>
